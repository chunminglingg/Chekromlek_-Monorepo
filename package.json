{
  "name": "chekromlek-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps"
    ],
    "nohoist": [
      "**/packages/**",
      "*/apps/*"
    ]
  },
  "scripts": {
    "start:docker": "docker-compose up --build",
    "start:app": "yarn workspace chekromlek-v1 start:dev",
    "start:api-gateway": "yarn workspace api-gateway start:dev",
    "start:auth-service": "yarn workspace auth start:dev",
    "start:notificaton-service": "yarn workspace notification start:dev",
    "start:post-service": "yarn workspace post start:dev",
    "start:user-service": "yarn workspace users start:dev",
    "start:all": "concurrently \"yarn start:api-gateway\" \"yarn start:auth-service\" \"yarn start:notificaton-service\" \"yarn start:post-service\" \"yarn start:user-service\"",
    "start:dev": "concurrently \"yarn start:app\" \"yarn start:app\""
  },
  "dependencies": {
    "@storybook/addon-actions": "^8.1.3",
    "@storybook/addon-essentials": "^8.1.3",
    "@storybook/addon-links": "^8.1.3",
    "@storybook/react": "^8.1.3",
    "concurrently": "^8.2.2"
  }
}
